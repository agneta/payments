<div class="md-padding ag-margin" layout="column">
  <div layout-align="start center" layout="row">
    <span flex="auto"></span>
    <span>{{invoice.code}}</span>
  </div>

  <div class="box">
    <div class="method" layout-align="start center" layout="row">
      <span class="title">Payment method:</span>
      <span>{{invoice.method || 'none'}}</span>
      <md-menu>
        <md-button ng-click="$mdMenu.open()" aria-label="edit" class="md-icon-button">
          <md-icon md-svg-src="<%-get_icon('material/edit')%>">
          </md-icon>
        </md-button>
        <md-menu-content width="4">
          <div class="payment-method-menu" layout="column">
            <%for(var method of page.methods){%>
              <div class="ag-list-item"
              ng-click="editMethod('<%-method.name%>')">
              <md-icon md-svg-src="<%-get_icon(method.icon)%>">
              </md-icon>
              <span><%-lng(method.title)%></span>
              </div>
              <%}%>
            </div>
          </md-menu-content>
        </md-menu>
      </div>
    </div>

    <div class="ag-margin summary box" layout="column">
      <span>Summary</span>
      <table>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
        <tr ng-repeat="item in invoice.itemList">
          <td class="label">
            <span>{{item.description}}</span>
          </td>
          <td>{{item.price | currency}}</td>
          <td>{{item.quantity}}</td>
          <td>{{(item.price * item.quantity) | currency}}</td>
        </tr>
      </table>
    </div>

    <div layout-align="end" layout="row">
      <div class="amount">
        Total: {{invoice.amount | currency}}
      </div>
    </div>

  </div>
